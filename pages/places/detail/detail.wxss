/* pages/places/detail/detail.wxss */

.place-detail-page {
  background: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部图片轮播 */
.header-images {
  position: relative;
  height: 500rpx;
}

.images-swiper {
  width: 100%;
  height: 100%;
}

.place-image {
  width: 100%;
  height: 100%;
}

.video-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
}

.video-btn .iconfont {
  font-size: 32rpx;
}

/* 基本信息卡片 */
.basic-info {
  margin: 32rpx;
}

.place-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.place-subtitle {
  font-size: 28rpx;
  color: var(--primary-color);
  margin-bottom: 24rpx;
  font-weight: 500;
}

.place-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

/* 特色亮点 */
.features-section {
  margin: 0 32rpx 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid var(--primary-color);
}

.features-list {
  padding-left: 16rpx;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.feature-dot {
  color: var(--primary-color);
  font-size: 32rpx;
  margin-right: 16rpx;
  line-height: 1.2;
}

.feature-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 参观信息 */
.visit-info {
  margin: 0 32rpx 32rpx;
}

.info-list {
  margin-top: 24rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.info-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.info-value.phone {
  color: var(--primary-color);
  text-decoration: underline;
}

.info-value.price {
  color: var(--accent-color);
  font-weight: 500;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 24rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  border: none;
  gap: 8rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, #388E3C 100%);
  color: white;
}

.action-btn.secondary {
  background: var(--bg-color);
  color: var(--text-secondary);
  border: 2rpx solid #E0E0E0;
}

.action-btn .iconfont {
  font-size: 32rpx;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .place-title {
    font-size: 36rpx;
  }
  
  .section-title {
    font-size: 30rpx;
  }
  
  .bottom-actions {
    padding: 20rpx 24rpx;
  }
}
