/* pages/guide/guide.wxss */

.guide-page {
  background: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 地图区域 */
.map-section {
  position: relative;
  height: 60vh;
  background: #f0f0f0;
}

.village-map {
  width: 100%;
  height: 100%;
}

.map-controls {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.map-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: var(--card-bg);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
}

.map-btn cover-image {
  width: 40rpx;
  height: 40rpx;
}

/* 筛选栏 */
.filter-section {
  background: var(--card-bg);
  padding: 24rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-scroll {
  height: 120rpx;
}

.filter-list {
  display: flex;
  gap: 24rpx;
  padding: 0 32rpx;
}

.filter-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
  padding: 16rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: rgba(46, 125, 50, 0.1);
}

.filter-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.filter-text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.filter-item.active .filter-text {
  color: var(--primary-color);
  font-weight: 500;
}

/* 景点列表区域 */
.spots-section {
  padding: 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.count {
  font-size: 28rpx;
  color: var(--text-secondary);
  font-weight: normal;
}

.view-mode {
  display: flex;
  gap: 8rpx;
}

.mode-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 12rpx;
  background: var(--card-bg);
  border: 2rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.mode-btn.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: white;
}

/* 列表视图 */
.spots-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.spot-item {
  display: flex;
  padding: 24rpx;
  transition: all 0.3s ease;
}

.spot-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.spot-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.spot-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.spot-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  flex: 1;
  margin-right: 16rpx;
}

.spot-distance {
  font-size: 24rpx;
  color: var(--text-secondary);
  background: rgba(46, 125, 50, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.spot-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.spot-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.spot-tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  background: var(--border-color);
  color: var(--text-secondary);
}

.tag-culture {
  background: rgba(211, 47, 47, 0.1);
  color: var(--secondary-color);
}

.tag-scenic {
  background: rgba(46, 125, 50, 0.1);
  color: var(--primary-color);
}

.spot-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-score {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--accent-color);
}

.rating-stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 20rpx;
  color: #ddd;
}

.star.filled {
  color: var(--accent-color);
}

.spot-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 网格视图 */
.spots-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.grid-item {
  background: var(--card-bg);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.grid-image {
  width: 100%;
  height: 240rpx;
}

.grid-content {
  padding: 20rpx;
}

.grid-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.grid-category {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.grid-rating {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.distance {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  background: var(--card-bg);
  border-top: 1rpx solid var(--border-color);
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 搜索弹窗 */
.search-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.search-modal.show {
  opacity: 1;
  visibility: visible;
}

.search-content {
  background: var(--card-bg);
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  margin-top: 20vh;
  height: 80vh;
}

.search-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.search-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.search-close {
  font-size: 48rpx;
  color: var(--text-secondary);
  line-height: 1;
}

.search-input-wrapper {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.search-input {
  flex: 1;
  background: var(--bg-color);
  border: 2rpx solid var(--border-color);
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
}

.search-btn {
  background: var(--primary-color);
  color: white;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.search-history {
  margin-top: 32rpx;
}

.history-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  padding: 16rpx 24rpx;
  background: var(--bg-color);
  border-radius: 32rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
}