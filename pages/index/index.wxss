/* pages/index/index.wxss */

.index-page {
  background: linear-gradient(180deg, var(--bg-color) 0%, #E8F5E8 100%);
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部导航留出空间 */
}

/* 轮播图区域 */
.banner-section {
  position: relative;
  margin-bottom: 48rpx;
}

.banner-swiper {
  height: 400rpx;
  border-radius: 0 0 32rpx 32rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 60rpx 32rpx 32rpx;
  color: white;
}

.banner-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.banner-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 快捷入口区域 */
.quick-entry-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 32rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid var(--primary-color);
}

.quick-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 24rpx;
}

.quick-item {
  background: var(--card-bg);
  border-radius: 20rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.quick-item:active {
  transform: scale(0.95);
}

.quick-icon {
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto 16rpx;
}

.quick-icon image {
  width: 100%;
  height: 100%;
}

.quick-title {
  font-size: 24rpx;
  color: var(--text-primary);
  font-weight: 500;
}

/* 通用区域头部 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-more {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
}

.section-more .iconfont {
  margin-left: 8rpx;
  font-size: 20rpx;
}



/* 热门景点区域 */
.hotspot-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.hotspot-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hotspot-item {
  display: flex;
  padding: 24rpx;
  transition: all 0.3s ease;
}

.hotspot-item:active {
  transform: scale(0.98);
}

.hotspot-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.hotspot-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hotspot-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.hotspot-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.hotspot-tags {
  display: flex;
  gap: 12rpx;
}

.hotspot-tags .tag {
  background: rgba(46, 125, 50, 0.1);
  color: var(--primary-color);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

/* 特色美食区域 */
.food-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.food-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.food-item {
  background: var(--card-bg);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.food-item:active {
  transform: scale(0.95);
}

.food-image {
  width: 100%;
  height: 200rpx;
}

.food-name {
  padding: 20rpx 20rpx 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.food-restaurant {
  padding: 0 20rpx 20rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 村庄动态区域 */
.news-section {
  padding: 0 32rpx;
  margin-bottom: 48rpx;
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.news-item {
  background: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.news-item:active {
  transform: scale(0.98);
}

.news-content {
  flex: 1;
  margin-right: 20rpx;
}

.news-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.news-summary {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-time, .news-views {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.news-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

/* 客服悬浮按钮 */
.fab {
  position: fixed;
  bottom: 120rpx;
  right: 32rpx;
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-color) 0%, #388E3C 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(46, 125, 50, 0.3);
  z-index: 1000;
  transition: all 0.3s ease;
}

.fab:active {
  transform: scale(0.9);
}

.fab .iconfont {
  font-size: 48rpx;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .quick-grid {
    grid-template-columns: 1fr 1fr;
    gap: 16rpx;
  }
  
  .food-grid {
    grid-template-columns: 1fr;
  }
  
  .recommend-item {
    width: 200rpx;
  }
} 