<!--pages/feedback/feedback.wxml-->
<view class="feedback-page">
  <view class="feedback-form">
    <view class="form-group">
      <view class="form-label">反馈类型</view>
      <picker mode="selector" range="{{feedbackTypes}}" bindchange="onTypeChange">
        <view class="picker-item">
          {{feedbackTypes[selectedType] || '请选择反馈类型'}}
          <text class="picker-arrow">></text>
        </view>
      </picker>
    </view>

    <view class="form-group">
      <view class="form-label">问题描述</view>
      <textarea 
        class="feedback-textarea" 
        placeholder="请详细描述您遇到的问题或建议..."
        value="{{feedbackContent}}"
        bindinput="onContentInput"
        maxlength="500"
        show-confirm-bar="false"/>
      <view class="char-count">{{feedbackContent.length}}/500</view>
    </view>

    <view class="form-group">
      <view class="form-label">联系方式（选填）</view>
      <input 
        class="form-input" 
        placeholder="手机号或微信号，便于我们联系您"
        value="{{contact}}"
        bindinput="onContactInput"/>
    </view>

    <button class="submit-btn" bindtap="submitFeedback">提交反馈</button>
  </view>

  <view class="feedback-tips">
    <view class="tips-title">温馨提示</view>
    <text class="tips-text">• 我们会认真对待每一条反馈\n• 工作日24小时内回复处理结果\n• 您的反馈将帮助我们提供更好的服务</text>
  </view>
</view>