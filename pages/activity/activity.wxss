/* pages/activity/activity.wxss */

.activity-page {
  background: var(--bg-color);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 分类标签区域 */
.category-section {
  background: var(--card-bg);
  padding: 24rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.category-scroll {
  height: 140rpx;
}

.category-list {
  display: flex;
  gap: 24rpx;
  padding: 0 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 140rpx;
  padding: 16rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  position: relative;
}

.category-item.active {
  background: rgba(46, 125, 50, 0.1);
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.category-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: center;
}

.category-item.active .category-text {
  color: var(--primary-color);
  font-weight: 500;
}

.category-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: var(--accent-color);
  color: white;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

/* 筛选和排序区域 */
.filter-section {
  background: var(--card-bg);
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.filter-left {
  display: flex;
  gap: 24rpx;
}

.filter-btn, .sort-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 32rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  background: var(--bg-color);
  position: relative;
}

.filter-dot {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--accent-color);
}

.filter-right {
  margin-top: 16rpx;
}

.result-count {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 活动列表区域 */
.activities-section {
  padding: 32rpx;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.activity-item {
  padding: 0;
  overflow: hidden;
  transition: all 0.3s ease;
}

.activity-item:active {
  transform: scale(0.98);
}

/* 活动封面 */
.activity-image-wrapper {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.activity-image {
  width: 100%;
  height: 100%;
}

.activity-status {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: white;
}

.status-available {
  background: var(--success-color);
}

.status-full {
  background: var(--error-color);
}

.status-ended {
  background: var(--text-secondary);
}

.hot-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: var(--accent-color);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 活动内容 */
.activity-content {
  padding: 32rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  flex: 1;
  margin-right: 16rpx;
  line-height: 1.3;
}

.activity-price {
  display: flex;
  align-items: baseline;
  color: var(--accent-color);
}

.price-symbol {
  font-size: 24rpx;
  font-weight: 500;
}

.price-value {
  font-size: 40rpx;
  font-weight: 600;
}

.price-unit {
  font-size: 24rpx;
  font-weight: 500;
}

.activity-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.activity-info {
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-text {
  flex: 1;
}

.activity-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  background: var(--border-color);
  color: var(--text-secondary);
}

.tag-category {
  background: rgba(46, 125, 50, 0.1);
  color: var(--primary-color);
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
}

.time-label {
  color: var(--text-secondary);
}

.time-value {
  color: var(--primary-color);
  font-weight: 500;
}

.activity-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-stars {
  display: flex;
  gap: 2rpx;
}

.star {
  font-size: 24rpx;
  color: #ddd;
}

.star.filled {
  color: var(--accent-color);
}

.rating-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-left: 8rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 32rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 32rpx;
}

.empty-btn {
  width: 240rpx;
  margin: 0 auto;
}

/* 筛选弹窗 */
.filter-modal, .sort-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.filter-modal.show, .sort-modal.show {
  opacity: 1;
  visibility: visible;
}

.filter-content, .sort-content {
  background: var(--card-bg);
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx;
  margin-top: 30vh;
  max-height: 70vh;
  overflow-y: auto;
}

.filter-header, .sort-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.filter-title, .sort-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.filter-reset {
  font-size: 26rpx;
  color: var(--primary-color);
}

.filter-group {
  margin-bottom: 48rpx;
}

.filter-group-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.price-options, .time-options, .tag-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.price-option, .time-option, .tag-option {
  padding: 16rpx 24rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 32rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  background: var(--card-bg);
  transition: all 0.3s ease;
}

.price-option.active, .time-option.active, .tag-option.active {
  background: var(--primary-color);
  color: white;
  border-color: var(--primary-color);
}

.filter-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.filter-btn-cancel, .filter-btn-confirm {
  flex: 1;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
}

.filter-btn-cancel {
  background: var(--border-color);
  color: var(--text-secondary);
}

/* 排序弹窗 */
.sort-options {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.sort-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  font-size: 28rpx;
  color: var(--text-primary);
}

.sort-option:last-child {
  border-bottom: none;
}

.sort-option.active .sort-text {
  color: var(--primary-color);
  font-weight: 500;
}

.sort-text {
  flex: 1;
}

/* 响应式适配 */
@media (max-width: 320px) {
  .category-list {
    gap: 16rpx;
  }
  
  .category-item {
    min-width: 120rpx;
  }
  
  .activities-list {
    gap: 24rpx;
  }
  
  .activity-content {
    padding: 24rpx;
  }
}