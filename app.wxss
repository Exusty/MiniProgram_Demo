/* 全局样式 - 鱼子山村智慧文旅小程序 */

/* 颜色变量定义 */
page {
  --primary-color: #2E7D32;      /* 森林绿 - 主色调 */
  --secondary-color: #D32F2F;    /* 中国红 - 辅助色 */
  --accent-color: #FF6F00;       /* 暖橙 - 点缀色 */
  --bg-color: #F8F9FA;          /* 淡灰白 - 主背景 */
  --card-bg: #FFFFFF;           /* 纯白 - 卡片背景 */
  --text-primary: #212121;       /* 深灰 - 主要文字 */
  --text-secondary: #757575;     /* 中灰 - 次要文字 */
  background-color: var(--bg-color);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 通用容器 */
.container {
  padding: 0 32rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: var(--card-bg);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 32rpx;
  margin-bottom: 24rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, #388E3C 100%);
  color: white;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

/* 文字样式 */
.text-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.text-subtitle {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
} 